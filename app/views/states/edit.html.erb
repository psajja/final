<h1>Edit a State</h1>


<%= form_tag "/states/#{@state.id}", :method => "patch" do %>
  <div>
    <label>State Name :</label>
    <input type="text" name="name" value="<%= @state.name %>">
  </div>

  <div>
    <label>State Short Name :</label>
    <input type="text" name="shortname" value="<%= @state.shortname %>">
  </div>


  <input type="submit" value="Update State">

<% end %>



